<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:maxWidth="50dp"
            android:layout_weight="2"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:id="@+id/employer_logo"
            android:src="@drawable/ic_domain_black_24dp"/>

        <TextView
            android:id="@+id/employer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/textColorEmployer"
            android:textSize="18sp"
            tools:text="Wattpad" />

    </LinearLayout>
    <LinearLayout
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:paddingRight ="5dp"
                    android:src="@drawable/ic_insert_invitation_black_24dp"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorEmployer"
                    android:textSize="12sp"
                    tools:text="Mar 6, 2010" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_access_time_black_24dp"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorEmployer"
                    android:textSize="12sp"
                    tools:text="3:00 - 4:00 PM" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="left">
                <ImageView
                    android:layout_height="16dp"
                    android:layout_width="16dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_room_black_24dp"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorEmployer"
                    android:textSize="12sp"
                    tools:text="SLC" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_weight="5"
            android:maxLines="3"
            android:textColor="@color/textColorEmployerDetails"
            android:textSize="13sp"
            tools:text="Wattpad is a global platform, proudly based in Toronto, that gives people everywhere the freedom to discover and create content they can't find anywhere else. We want to tell you about the perks we offer, including competitive salary, meaningful work (there's a good change you'll push code into production on Day 1!), and a great staff culture. Learn more about us at wattpad.com" />

        <TextView
            android:id="@+id/audience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>